      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "yellow"},
              {"value": 86400, "color": "orange"},
              {"value": 259200, "color": "green"}
            ]
          },
          "unit": "s",
          "decimals": 0
        }
      }
    },
