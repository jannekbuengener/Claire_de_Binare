      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 12},
      "collapsed": false
    },
    {
      "id": 21,
      "type": "timeseries",
      "title": "CONTAINER RESTARTS OVER TIME (Zero Restart Policy)",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 13},
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "container_restart_count{name=~\"cdb_.*\"}",
          "refId": "A",
          "legendFormat": "{{name}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": ["max", "last"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "stepAfter",
            "fillOpacity": 10
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 1, "color": "red"}
            ]
          },
          "unit": "none",
          "min": 0
        }
      }
    },
    {
      "id": 30,
      "type": "row",
      "title": "Resource Usage (Memory Leak Detection)",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 21},
      "collapsed": false
    },
    {
      "id": 31,
      "type": "timeseries",
      "title": "MEMORY USAGE % (Threshold: 80%)",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 22},
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 * (container_memory_usage_bytes{name=~\"cdb_.*\"} / container_spec_memory_limit_bytes{name=~\"cdb_.*\"})",
          "refId": "A",
          "legendFormat": "{{name}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": ["mean", "max", "last"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 80, "color": "yellow"},
              {"value": 90, "color": "red"}
            ]
          },
          "unit": "percent",
          "min": 0,
          "max": 100
        },
        "overrides": [
          {
            "matcher": {"id": "byFrameRefID", "options": "A"},
            "properties": [
              {
                "id": "custom.lineWidth",
                "value": 2
              }
            ]
          }
        ]
      }
    },
