{
  "uid": "claire_soak_test_v1",
  "title": "Claire - 72h Soak Test Monitor",
  "description": "Zero Restart Policy validation - 72-hour continuous operation monitoring (Issue #428)",
  "tags": ["claire", "soak-test", "stability", "zero-restart"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-72h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "row",
      "title": "ABORT TRIGGERS - Critical Monitoring",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
      "collapsed": false
    },
    {
      "id": 2,
      "type": "stat",
      "title": "üö® CONTAINER RESTARTS (MUST BE 0)",
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 1},
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(container_restart_count{name=~\"cdb_.*\"})",
          "refId": "A",
          "legendFormat": "Total Restarts"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "text": {
          "titleSize": 16,
          "valueSize": 48
        },
        "colorMode": "background",
        "graphMode": "none"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 1, "color": "red"}
            ]
          },
          "unit": "none",
          "decimals": 0
        }
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "üíæ DISK SPACE REMAINING",
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 1},
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 * (node_filesystem_avail_bytes / node_filesystem_size_bytes)",
          "refId": "A",
          "legendFormat": "{{mountpoint}}"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "colorMode": "background"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 10, "color": "orange"},
              {"value": 30, "color": "green"}
            ]
          },
          "unit": "percent",
          "decimals": 1
        }
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "‚è±Ô∏è TEST DURATION",
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 1},
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "time() - process_start_time_seconds{job=\"cdb_signal\"}",
          "refId": "A"
