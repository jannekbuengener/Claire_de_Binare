      "type": "stat",
      "title": "üö® KILL-SWITCH STATUS",
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "kill_switch_active",
          "refId": "A",
          "legendFormat": "Kill-Switch"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {"color": "#22c55e", "index": 0, "text": "‚úÖ INACTIVE"},
                "1": {"color": "#ef4444", "index": 1, "text": "üö® ACTIVE - TRADING STOPPED"}
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "#22c55e", "value": null},
              {"color": "#ef4444", "value": 1}
            ]
          },
          "unit": "none"
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "orientation": "auto",
        "textMode": "value_and_name"
      }
    },
