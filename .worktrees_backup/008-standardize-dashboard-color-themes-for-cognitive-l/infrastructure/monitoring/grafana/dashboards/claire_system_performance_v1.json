{
  "uid": "claire_system_v1",
  "title": "Claire - System Performance",
  "description": "Complete system monitoring - CPU, Memory, Services, Health - Semantic color theme",
  "tags": ["claire", "system", "performance", "monitoring"],
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m"]
  },
  "style": "dark",
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "SERVICES UP",
      "gridPos": {"h": 5, "w": 4, "x": 0, "y": 0},
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "count(up == 1)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "#0a0a0a", "value": null},
              {"color": "#ef4444", "value": 1},
              {"color": "#f97316", "value": 3},
              {"color": "#22c55e", "value": 4}
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value"
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "SIGNAL ENGINE",
      "gridPos": {"h": 5, "w": 5, "x": 4, "y": 0},
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "up{job=\"cdb_core\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {"color": "#ef4444", "index": 0, "text": "DOWN"},
                "1": {"color": "#22c55e", "index": 1, "text": "UP"}
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "#ef4444", "value": null},
              {"color": "#22c55e", "value": 1}
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value_and_name"
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "RISK MANAGER",
      "gridPos": {"h": 5, "w": 5, "x": 9, "y": 0},
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "up{job=\"cdb_risk\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {"color": "#ef4444", "index": 0, "text": "DOWN"},
                "1": {"color": "#22c55e", "index": 1, "text": "UP"}
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "#ef4444", "value": null},
              {"color": "#22c55e", "value": 1}
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value_and_name"
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "EXECUTION",
      "gridPos": {"h": 5, "w": 5, "x": 14, "y": 0},
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "up{job=\"cdb_execution\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {"color": "#ef4444", "index": 0, "text": "DOWN"},
                "1": {"color": "#22c55e", "index": 1, "text": "UP"}
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "#ef4444", "value": null},
              {"color": "#22c55e", "value": 1}
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value_and_name"
      }
    },
    {
      "id": 5,
      "type": "stat",
      "title": "PROMETHEUS",
      "gridPos": {"h": 5, "w": 5, "x": 19, "y": 0},
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "up{job=\"prometheus\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {"color": "#ef4444", "index": 0, "text": "DOWN"},
                "1": {"color": "#22c55e", "index": 1, "text": "UP"}
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "#ef4444", "value": null},
              {"color": "#22c55e", "value": 1}
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value_and_name"
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "CPU USAGE (Go Runtime)",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 5},
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{job=~\"cdb_.*\"}[1m]) * 100",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 30,
            "gradientMode": "opacity",
            "spanNulls": false,
            "showPoints": "never"
          },
          "unit": "percent",
          "min": 0,
          "max": 100
        },
        "overrides": [
          {
            "matcher": {"id": "byRegexp", "options": "/cdb_.*/"},
            "properties": [
              {"id": "color", "value": {"mode": "fixed", "fixedColor": "#3b82f6"}}
            ]
          }
        ]
      },
      "options": {
        "tooltip": {"mode": "multi"},
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "MEMORY USAGE (RSS)",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 5},
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=~\"cdb_.*\"} / 1024 / 1024",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 30,
            "gradientMode": "opacity",
            "spanNulls": false,
            "showPoints": "never"
          },
          "unit": "decmbytes"
        },
        "overrides": [
          {
            "matcher": {"id": "byRegexp", "options": "/cdb_.*/"},
            "properties": [
              {"id": "color", "value": {"mode": "fixed", "fixedColor": "#3b82f6"}}
            ]
          }
        ]
      },
      "options": {
        "tooltip": {"mode": "multi"},
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "GOROUTINES (Concurrency Load)",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 13},
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "go_goroutines{job=~\"cdb_.*\"}",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 20,
            "spanNulls": false,
            "showPoints": "never"
          },
          "unit": "short"
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "cdb_core"},
            "properties": [
              {"id": "color", "value": {"mode": "fixed", "fixedColor": "#2563eb"}}
            ]
          },
          {
            "matcher": {"id": "byName", "options": "cdb_risk"},
            "properties": [
              {"id": "color", "value": {"mode": "fixed", "fixedColor": "#3b82f6"}}
            ]
          },
          {
            "matcher": {"id": "byName", "options": "cdb_execution"},
            "properties": [
              {"id": "color", "value": {"mode": "fixed", "fixedColor": "#60a5fa"}}
            ]
          }
        ]
      },
      "options": {
        "tooltip": {"mode": "multi"},
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["last", "max"]
        }
      }
    },
    {
      "id": 9,
      "type": "timeseries",
      "title": "HTTP REQUEST RATE",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 13},
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(promhttp_metric_handler_requests_total{job=~\"cdb_.*\"}[1m])",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "bars",
            "barAlignment": 0,
            "fillOpacity": 80,
            "gradientMode": "opacity",
            "spanNulls": false
          },
          "unit": "reqps"
        },
        "overrides": [
          {
            "matcher": {"id": "byRegexp", "options": "/cdb_.*/"},
            "properties": [
              {"id": "color", "value": {"mode": "fixed", "fixedColor": "#3b82f6"}}
            ]
          }
        ]
      },
      "options": {
        "tooltip": {"mode": "multi"},
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 10,
      "type": "bargauge",
      "title": "SERVICE UPTIME",
      "gridPos": {"h": 10, "w": 12, "x": 0, "y": 21},
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "execution_uptime_seconds",
          "legendFormat": "Execution",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "#0a0a0a", "value": null},
              {"color": "#ef4444", "value": 60},
              {"color": "#f97316", "value": 300},
              {"color": "#16a34a", "value": 3600},
              {"color": "#22c55e", "value": 86400}
            ]
          }
        }
      },
      "options": {
        "displayMode": "gradient",
        "orientation": "horizontal",
        "showUnfilled": true
      }
    },
    {
      "id": 11,
      "type": "stat",
      "title": "TOTAL METRICS SCRAPED",
      "gridPos": {"h": 10, "w": 12, "x": 12, "y": 21},
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "count(up)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "#0a0a0a", "value": null},
              {"color": "#3b82f6", "value": 1}
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "textMode": "value",
        "orientation": "vertical"
      }
    },
    {
      "id": 12,
      "type": "table",
      "title": "SERVICE HEALTH OVERVIEW",
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 31},
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "up{job=~\"cdb_.*|prometheus\"}",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto"
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "Value"},
            "properties": [
              {
                "id": "custom.displayMode",
                "value": "color-background"
              },
              {
                "id": "mappings",
                "value": [
                  {
                    "type": "value",
                    "options": {
                      "0": {"color": "#ef4444", "index": 0, "text": "DOWN"},
                      "1": {"color": "#22c55e", "index": 1, "text": "UP"}
                    }
                  }
                ]
              }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "__name__": true,
              "Time": true,
              "instance": true
            }
          }
        }
      ]
    }
  ]
}
