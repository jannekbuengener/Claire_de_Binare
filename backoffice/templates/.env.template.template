#############################################

########################
# Core Infrastructure  #
########################

# PostgreSQL
POSTGRES_DB=claire_de_binare
POSTGRES_USER=claire
POSTGRES_PASSWORD=<SET_IN_ENV>         # Secret, nur in .env

# Redis
REDIS_HOST=redis                       # ggf. Service-Name aus docker-compose
REDIS_PORT=6379
REDIS_PASSWORD=<SET_IN_ENV>           # Secret, nur in .env

################
# MEXC API     #
################

# Ein MEXC-Key-Paar für das System:
# Empfehlung N1: Trading-Key verwenden, ip-gebunden, OHNE Withdrawals
MEXC_API_KEY=<SET_IN_ENV>             # z.B. dein TRADING-API-Key
MEXC_API_SECRET=<SET_IN_ENV>

# Optional: Wenn du später Data/Trading trennen willst (N2+),
# kannst du diese ergänzen – aktuell werden sie NICHT verwendet:
# MEXC_TRADE_API_KEY=<SET_IN_ENV>
# MEXC_TRADE_API_SECRET=<SET_IN_ENV>

######################
# Monitoring / UI    #
######################

GRAFANA_PASSWORD=<SET_IN_ENV>         # Login-Passwort für Grafana

# Prometheus-Scrape-Intervall (optional, Default 15s)
PROMETHEUS_SCRAPE_INTERVAL_SEC=15

########################
# Risk Engine Parameter#
########################
# Dezimal-Konvention gemäß ADR-035:
# 0.05 = 5%, 0.10 = 10% usw.

MAX_POSITION_PCT=0.10                 # 10% Kapital pro Trade
MAX_EXPOSURE_PCT=0.50                 # 50% Gesamtexposure
MAX_DAILY_DRAWDOWN_PCT=0.05           # 5% Tages-Drawdown-Limit
STOP_LOSS_PCT=0.02                    # 2% Stop-Loss pro Trade

MAX_SLIPPAGE_PCT=0.01                 # 1% Slippage-Grenze
MAX_SPREAD_MULTIPLIER=5.0             # 5x normaler Spread
DATA_STALE_TIMEOUT_SEC=30             # 30s Datenstille-Timeout

##################
# Service Ports  #
##################

WS_PORT=8000          # WebSocket Screener
SIGNAL_PORT=8001      # Signal Engine
RISK_PORT=8002        # Risk Manager
EXEC_PORT=8003        # Execution Service

PROM_PORT=9090        # Prometheus (im Container)
GRAFANA_PORT=3000     # Grafana
REDIS_PORT=6379       # Redis
DB_PORT=5432          # PostgreSQL

##################
# Misc / Flags   #
##################

