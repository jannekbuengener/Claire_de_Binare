# Default: 14 days (if not set)
# PAPER_TRADING_DURATION_DAYS=14

# Logging verbosity for paper trading runner
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO (if not set)
# LOG_LEVEL=INFO

